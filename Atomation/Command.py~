from sys import *

def main():
	print("Number of command line arguments are : ",len(argv)) # 1
	print("Name of application is : ",argv[0]) # Command.py
	print("First argument : ",argv[1])
	print("second argument : ",argv[2])
	
if __name__ == "__main__":
	main() 




